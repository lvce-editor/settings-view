{
  "name": "@lvce-editor/settings-view",
  "version": "0.0.0-dev",
  "description": "Explorer Worker",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvce-editor/settings-view.git"
  },
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "src/settingsViewWorkerMain.ts",
  "scripts": {
    "build:watch": "cd ../../ && npm run build:watch",
    "dev": "cd ../../ && npm run dev",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 65,
        "functions": 65,
        "lines": 65
      }
    }
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@lvce-editor/assert": "^1.4.0",
    "@lvce-editor/i18n": "^1.1.0",
    "@lvce-editor/rpc": "^4.11.0",
    "@lvce-editor/rpc-registry": "^2.65.0",
    "@lvce-editor/verror": "^1.7.0",
    "@lvce-editor/viewlet-registry": "^1.4.0",
    "@lvce-editor/virtual-dom-worker": "^2.16.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0"
  }
}
